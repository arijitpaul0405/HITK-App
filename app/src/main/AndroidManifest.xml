<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.hitkapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SchoolApp"
        tools:targetApi="31">
        <activity
            android:name="com.example.hitkapp.AssignmentUploadActivity"
            android:exported="false"
            android:label="Assignment Upload"/>
        <activity
            android:name="com.example.hitkapp.AssignmentActivity"
            android:exported="false"
            android:label="Assignment" />
        <activity
            android:name="com.example.hitkapp.SyllabusActivity"
            android:exported="false"
            android:label="Syllabus" />
        <activity
            android:name="com.example.hitkapp.TimeTableActivity"
            android:exported="false"
            android:label="Time Table" />
        <activity
            android:name="com.example.hitkapp.TeacherPageActivity"
            android:exported="false" />
        <activity
            android:name="com.example.hitkapp.StudentPageActivity"
            android:exported="false" />
        <activity
            android:name="com.example.hitkapp.TeacherSignInActivity"
            android:exported="false"
            android:theme="@style/Theme.SchoolApp.NoActionBar" />
        <activity
            android:name="com.example.hitkapp.StudentSignInActivity"
            android:exported="false"
            android:theme="@style/Theme.SchoolApp.NoActionBar" />
        <activity
            android:name="com.example.hitkapp.FacultyActivity"
            android:exported="false"
            android:label="Faculty" />
        <activity
            android:name="com.example.hitkapp.NoticeActivity"
            android:exported="false"
            android:label="Notice Board" />
        <activity
            android:name="com.example.hitkapp.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar.Bridge">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.hitkapp.MainActivity"
            android:exported="true" />
    </application>

</manifest>